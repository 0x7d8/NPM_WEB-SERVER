{
  "compilerOptions": {
    "module": "CommonJS",
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "lib",
    "downlevelIteration": true,
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/**/*"]
}